@model ProductoVendido

<h2>Formulario venta de producto</h2>

@using (Html.BeginForm("GuardarProductoVendido", "Venta", FormMethod.Post))

{
    <form>
        <div class="form-group">
            <div class="form-group col-md-4">
                @Html.LabelFor(x=>x.Id)
                @Html.TextBoxFor(model => model.Id, new{@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="form-group col-md-4">
                @Html.LabelFor(x=>x.IdProducto)
                @Html.TextBoxFor(model => model.IdProducto, new{@class="form-control",@readonly = true})
            </div>
        </div>
        <div class="form-group">
            <div class="form-group col-md-4">
                @Html.LabelFor(x=>x.IdVenta)
                @Html.TextBoxFor(model => model.IdVenta, new{@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="form-group col-md-4">
                @Html.LabelFor(x=>x.Cantidad)
                @Html.TextBoxFor(model => model.Cantidad, new{@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="form-group col-md-4">
                <button class="btn btn-success" type="submit">Vender</button>
            </div>
        </div>
    </form>
}
